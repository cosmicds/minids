{
    "compilerOptions": {
      "target": "es5",
      "module": "esnext",
      "composite": true,
      "strict": true,
      "jsx": "preserve",
      "importHelpers": true,
      "downlevelIteration": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "baseUrl": ".",
      "outDir": "dist",
      "paths": {
        "@/*": [
          "src/*"
        ]
      },
      "lib": [
        "dom",
        "dom.iterable",
        "es6"
      ]
    },
    "include": [
      "plugins/*.ts",
      "src/**/*.ts",
      "src/**/*.vue",
      "src/**/*.vue.ts"
    ]
  }
  